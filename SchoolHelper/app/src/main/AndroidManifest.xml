<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luanxu.schoolhelper">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name="com.luanxu.application.SchoolHelperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 启动页 -->
        <activity android:name="com.luanxu.activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 数据库内容提供者 -->
        <provider
            android:authorities="com.luanxu.cache.CacheProvider"
            android:name="com.luanxu.cache.CacheProvider"
            android:exported="true">
        </provider>
        <activity android:name=".ExampleActivity"></activity>
        <!-- 登录页面 -->
        <activity android:name="com.luanxu.activity.LoginActivity"></activity>
        <!-- 主页面 -->
        <activity android:name="com.luanxu.schoolhelper.MainActivity"></activity>
        <!-- 学分页面 -->
        <activity android:name="com.luanxu.activity.CreditActivity"></activity>
        <!-- 学分页面 -->
        <activity android:name="com.luanxu.activity.PersonalDetailsActivity"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<com.luanxu.custom.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:orientation="vertical"
        android:scaleType="fitXY"
        app:layout_heightPercent="50%w"
        android:src="@mipmap/ic_love_head"/>
    <com.luanxu.custom.percent.PercentFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="51.69%w"
        app:layout_heightPercent="30%w"
        app:layout_marginLeftPercent="24%w">
        <ImageView
            android:id="@+id/iv_gold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_gold"/>
        <com.luanxu.custom.CircleImageView
            android:id="@+id/civ_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="37%w"
            app:layout_widthPercent="37%w"
            app:layout_marginBottomPercent="3.7%w"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_head2"
            android:layout_gravity="center_horizontal|bottom"
            />
    </com.luanxu.custom.percent.PercentFrameLayout>
    <com.luanxu.custom.percent.PercentFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="43%w"
        app:layout_heightPercent="25%w"
        app:layout_marginTopPercent="20%w">
        <ImageView
            android:id="@+id/iv_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_silver"/>
        <com.luanxu.custom.CircleImageView
            android:id="@+id/civ_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="19%w"
            app:layout_widthPercent="19%w"
            app:layout_marginBottomPercent="1.7%w"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_head2"
            android:layout_gravity="center_horizontal|bottom" />
    </com.luanxu.custom.percent.PercentFrameLayout>
    <com.luanxu.custom.percent.PercentFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="43%w"
        app:layout_heightPercent="25%w"
        app:layout_marginLeftPercent="57%w"
        app:layout_marginTopPercent="20%w">
        <ImageView
            android:id="@+id/iv_bronze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_bronze"/>
        <com.luanxu.custom.CircleImageView
            android:id="@+id/civ_bronze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="43%w"
            app:layout_widthPercent="43%w"
            app:layout_marginBottomPercent="4.5%w"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_head2"
            android:layout_gravity="center_horizontal|bottom" />
    </com.luanxu.custom.percent.PercentFrameLayout>

</com.luanxu.custom.percent.PercentFrameLayout>

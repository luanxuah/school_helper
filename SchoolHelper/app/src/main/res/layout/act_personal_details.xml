<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <include layout="@layout/title_line" />
    <!-- 已适配  Sing -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                app:layout_heightPercent="3%w"
                android:background="@color/color_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="21.3%w"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onChangeHead" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_head" />

                <com.luanxu.custom.RoundCornerImageView
                    android:id="@+id/raiv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="17.3%w"
                    app:layout_marginBottomPercent="2.6%w"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="5%w"
                    app:layout_marginTopPercent="2.6%w"
                    app:layout_widthPercent="17.3%w"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:onClick="onEnLargeHead"
                    android:src="@mipmap/ic_heads_doc"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_name"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_name"
                     />

                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="小明"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_sex"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_sex"
                    />

                <TextView
                    android:id="@+id/tv_sex"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="男"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:clickable="true"
                android:onClick="onQRCode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_academy"
                    />
                <TextView
                    android:id="@+id/tv_academy"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="数学计算机科学学院"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />
            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_class"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_class"
                    />

                <TextView
                    android:id="@+id/tv_class"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="软件工程"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_heightPercent="3%w"
                android:background="@color/color_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                android:onClick="onChangeUnit" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_birth_date"
                    />

                <TextView
                    android:id="@+id/tv_birth_date"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="男"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"/>
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                android:onClick="onChangeDepartment" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_politics_status"
                    />

                <TextView
                    android:id="@+id/tv_politics_status"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:text="团员"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"/>
            </com.luanxu.custom.percent.PercentLinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                android:onClick="onChangeTitle" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_phone_num"
                     />

                <TextView
                    android:id="@+id/tv_photo"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="18888888888"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />
            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="11.7%w"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                android:onClick="onChangeTitle" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_email"
                    />

                <TextView
                    android:id="@+id/tv_email"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="188888888@qq.com"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />
        </com.luanxu.custom.percent.PercentLinearLayout>
    </ScrollView>

</LinearLayout>
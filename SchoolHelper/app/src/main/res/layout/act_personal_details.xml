<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <include layout="@layout/title_line" />
    <!-- 已适配  Sing -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/color_background"
                app:layout_heightPercent="3%w" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_head"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                android:gravity="center_vertical"
                app:layout_heightPercent="21.3%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_head"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <com.luanxu.custom.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_heads_doc"
                    app:layout_heightPercent="17.3%w"
                    app:layout_marginBottomPercent="2.6%w"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="5%w"
                    app:layout_marginTopPercent="2.6%w"
                    app:layout_widthPercent="17.3%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"
                app:layout_marginLeftPercent="2.6%w" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_name"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="小明"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="2.6%w" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"
                app:layout_marginLeftPercent="2.6%w" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_sex"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_sex"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="男"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="2.6%w" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"
                app:layout_marginLeftPercent="2.6%w" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_academy"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_academy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="数学计算机科学学院"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_class"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                android:clickable="true"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_class"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="软件工程"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="2.6%w" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_background"
                app:layout_heightPercent="3%w" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_qr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/my_qr_code"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:drawableRight="@mipmap/ic_qr"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="visible"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/str_birth_date"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:text="1993/3/13"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"
                app:layout_marginLeftPercent="2.6%w" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/str_politics_status"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_politics_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:text="团员"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="invisible"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"
                app:layout_marginLeftPercent="2.6%w" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_phone_num"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="18888888888"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/selector_pressed_background"
                app:layout_heightPercent="11.7%w">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/str_email"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="188888888@qq.com"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    app:layout_marginRightPercent="2.6%w" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />
        </com.luanxu.custom.percent.PercentLinearLayout>
    </ScrollView>

</LinearLayout>
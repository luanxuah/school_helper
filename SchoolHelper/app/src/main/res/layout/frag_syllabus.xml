                    android:orientation="vertical"
                    >

                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_gray"/>
                <LinearLayout
                    android:id="@+id/weekPanel_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.luanxu.custom.percent.PercentLinearLayout
        android:id="@+id/pll_list_week"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_head"
        android:background="@color/color_5c848484"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal"
        >
        <ListView
            android:id="@+id/lv_week"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="50%w"
            app:layout_heightPercent="80%w"
            android:background="@drawable/ic_dropdown_week_bg"
            android:scrollbars="none"
            />
    </com.luanxu.custom.percent.PercentLinearLayout>
    <com.luanxu.custom.percent.PercentLinearLayout
        android:id="@+id/pll_class_details"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_head"
        android:background="@color/color_5c848484"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_class_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%w"
            android:minLines="8"
            android:textSize="@dimen/yms_font_36_px"
            android:textColor="@color/color_white"
            android:gravity="center"
            />

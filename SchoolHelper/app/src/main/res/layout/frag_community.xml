<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <!-- 已适配  Sing -->

    <include layout="@layout/title_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="4%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentFrameLayout
                    android:id="@+id/pfl_schoolmate_circle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="12%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="5%w"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawablePadding="@dimen/yms_dimens_24.0_px"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:gravity="center_vertical"
                        android:text="校友圈" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentFrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="4%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentFrameLayout
                    android:id="@+id/pfl_help"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="12%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="5%w"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawablePadding="@dimen/yms_dimens_24.0_px"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:gravity="center_vertical"
                        android:text="失物招领" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentFrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="4%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentFrameLayout
                    android:id="@+id/pfl_love"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="12%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="5%w"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawablePadding="@dimen/yms_dimens_24.0_px"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:gravity="center_vertical"
                        android:text="表白墙" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentFrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="4%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentFrameLayout
                    android:id="@+id/pfl_activity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="12%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="5%w"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:drawablePadding="@dimen/yms_dimens_24.0_px"
                        android:drawableStart="@mipmap/ic_launcher"
                        android:gravity="center_vertical"
                        android:text="校内活动" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentFrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_transparent" />
            </com.luanxu.custom.percent.PercentLinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" />

</LinearLayout>
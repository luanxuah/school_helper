<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <!-- 已适配  Sing -->

    <include layout="@layout/title_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="3%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentLinearLayout
                    android:id="@+id/pfl_schoolmate_circle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical"
                    app:layout_heightPercent="13%w">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_schoolmate_circle"
                        app:layout_heightPercent="6%w"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_widthPercent="6%w" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_schoolmate_circle"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        app:layout_marginLeftPercent="2%w" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right"
                        app:layout_marginRightPercent="3%w" />
                </com.luanxu.custom.percent.PercentLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="3%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentLinearLayout
                    android:id="@+id/pfl_help"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="13%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="6%w"
                        app:layout_widthPercent="6%w"
                        app:layout_marginLeftPercent="5%w"
                        android:src="@mipmap/ic_help"/>
                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="2%w"
                        android:gravity="center_vertical"
                        android:text="@string/str_lost_and_found" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="3%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentLinearLayout
                    android:id="@+id/pfl_love"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="13%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="6%w"
                        app:layout_widthPercent="6%w"
                        app:layout_marginLeftPercent="5%w"
                        android:src="@mipmap/ic_confession_wall"/>
                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="2%w"
                        android:gravity="center_vertical"
                        android:text="@string/str_confession_wall" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    app:layout_marginTopPercent="3%w"
                    android:background="@color/color_transparent" />

                <com.luanxu.custom.percent.PercentLinearLayout
                    android:id="@+id/pfl_activity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_heightPercent="13%w"
                    android:background="@drawable/selector_shape_ffffff_0dp"
                    android:gravity="center_vertical" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="6%w"
                        app:layout_widthPercent="6%w"
                        app:layout_marginLeftPercent="5%w"
                        android:src="@mipmap/ic_activity"/>
                    <TextView
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/yms_font_32_px"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:layout_marginLeftPercent="2%w"
                        android:gravity="center_vertical"
                        android:text="@string/str_movement" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        app:layout_marginRightPercent="3%w"
                        android:contentDescription="@null"
                        android:src="@mipmap/ic_work_right" />
                </com.luanxu.custom.percent.PercentLinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_transparent" />
            </com.luanxu.custom.percent.PercentLinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null" />

</LinearLayout>
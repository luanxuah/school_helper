<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/btn_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/yms_dimens_40.0_px"
        android:layout_marginLeft="@dimen/yms_dimens_70.0_px"
        android:layout_marginRight="@dimen/yms_dimens_70.0_px"
        android:layout_marginTop="@dimen/yms_dimens_60.0_px"
        android:background="@drawable/rotate_pull_to_refresh_loading"
        android:contentDescription="@null"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/yms_dimens_10.0_px"
        android:layout_marginTop="@dimen/yms_dimens_10.0_px"
        android:background="@null"
        android:gravity="center"
        android:text="@string/ing"
        android:textColor="@color/color_white"
        android:textSize="@dimen/word_size_14sp" />

</LinearLayout>
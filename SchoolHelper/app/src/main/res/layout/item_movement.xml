<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <com.luanxu.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_address"
            android:textColor="@color/color_black"
            android:textSize="@dimen/yms_font_28_px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginPercent="2%w"
            android:drawableLeft="@mipmap/ic_meeting_adresss"
            android:drawablePadding="@dimen/yms_dimens_20.0_px"
            android:drawableStart="@mipmap/ic_meeting_adresss"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="花津校区2号楼2010504"/>

        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginBottomPercent="2%w"
            app:layout_marginRightPercent="2%w">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="21%w"
                app:layout_widthPercent="17%w"
                android:scaleType="centerCrop"
                android:src="@mipmap/meeting_default" />
            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="21%w"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="寝室设计大赛"
                    android:gravity="center_vertical"/>

                <LinearLayout
                    android:id="@+id/ll_meeting_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/yms_font_24_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="活动时间:" />

                    <TextView
                        android:id="@+id/tv_starttime"
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/yms_font_24_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_marginLeftPercent="3%w"
                        app:layout_marginTopPercent="21%w"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="11月15号"/>

                    <TextView
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/yms_font_24_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/yms_dimens_4.0_px"
                        android:layout_marginRight="@dimen/yms_dimens_4.0_px"
                        android:text="-" />

                    <TextView
                        android:id="@+id/tv_endtime"
                        android:textColor="@color/color_gray"
                        android:textSize="@dimen/yms_font_24_px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="11月16号"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    app:layout_marginLeftPercent="3%w"
                    android:orientation="horizontal" >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <TextView
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/yms_font_24_px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="学分类型：" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/yms_font_24_px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="B模块"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <TextView
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/yms_font_24_px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="参与学分：" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:textColor="@color/color_gray"
                            android:textSize="@dimen/yms_font_24_px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="0.2"/>
                    </LinearLayout>
                </LinearLayout>

            </com.luanxu.custom.percent.PercentLinearLayout>
        </com.luanxu.custom.percent.PercentLinearLayout>
    </com.luanxu.custom.percent.PercentLinearLayout>
</LinearLayout>

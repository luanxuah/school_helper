<?xml version="1.0" encoding="utf-8"?>
<com.luanxu.custom.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.luanxu.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <com.luanxu.custom.MagnificentChart
            android:id="@+id/magnificentChart"
            android:layout_gravity="center"
            app:layout_heightPercent="40%w"
            app:layout_marginBottomPercent="3%w"
            app:layout_marginTopPercent="8%w"
            app:layout_widthPercent="40%w"
            app:animation="false"
            app:backgroundColor="@color/color_white"
            app:round="false"
            app:shadow="true"
            app:shadowColor="#F2F2F2"
            app:showTitle="false" />

        <TextView
            android:id="@+id/tv_date"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/yms_font_32_px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginBottomPercent="3%w"
            app:layout_marginLeftPercent="4.5%w"
            app:layout_marginRightPercent="4.5%w"
            android:gravity="center"
            />
    </com.luanxu.custom.percent.PercentLinearLayout>
  <View
      android:id="@+id/v_line"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/color_divider"
      android:visibility="gone"/>
</com.luanxu.custom.percent.PercentLinearLayout>
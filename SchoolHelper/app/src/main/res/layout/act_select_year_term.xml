<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <include layout="@layout/title_line" />

    <com.luanxu.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_marginTopPercent="5%w"
            android:background="@color/color_divider" />

        <!-- 添加人大代表start -->

        <com.luanxu.custom.percent.PercentLinearLayout
            android:id="@+id/pll_npc_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_shape_ffffff_0dp"
                android:orientation="horizontal" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="学年" />

                <TextView
                    android:id="@+id/tv_year"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    app:layout_marginRightPercent="3%w"
                    android:hint="请选择学年" />

                <ImageView
                    android:id="@+id/iv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="3%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="gone"/>
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginRightPercent="3%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_shape_ffffff_0dp"
                android:orientation="horizontal" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="学期" />

                <TextView
                    android:id="@+id/tv_term"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    app:layout_marginRightPercent="3%w"
                    android:hint="请选择学期" />

                <ImageView
                    android:id="@+id/iv_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="3%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="gone"
                    />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

        </com.luanxu.custom.percent.PercentLinearLayout>

        <Button
            android:id="@+id/tv_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_blue_8px"
            android:text="完成"
            android:textSize="@dimen/yms_font_40_px"
            android:textColor="@color/color_white"
            android:padding="@dimen/yms_dimens_20.0_px"
            app:layout_marginLeftPercent="10%w"
            app:layout_marginRightPercent="10%w"
            app:layout_marginTopPercent="10%w"/>


    </com.luanxu.custom.percent.PercentLinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <include layout="@layout/title_line" />
    <!-- 已适配  Sing -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="8%w"
                android:background="@color/color_background" >

                <TextView
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_22_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_phone"
                    />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_phone_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_telephone"
                    />
                <TextView
                    android:id="@+id/tv_phone_one"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="18801116048"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="visible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_phone_two"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_telephone"
                    />

                <TextView
                    android:id="@+id/tv_phone_two"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="15755371818"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="visible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="8%w"
                android:background="@color/color_background" >

                <TextView
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_22_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="QQ"
                    />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_qq_one"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_qq"
                    />
                <TextView
                    android:id="@+id/tv_qq_one"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="1820101759"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="visible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="2.6%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:id="@+id/pll_qq_two"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_pressed_background" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="@string/str_qq"
                    />
                <TextView
                    android:id="@+id/tv_qq_two"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_28_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_marginLeftPercent="2.6%w"
                    app:layout_marginRightPercent="2.6%w"
                    android:gravity="center_vertical"
                    android:text="1119386572"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginRightPercent="2.6%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right"
                    android:visibility="visible" />

            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider" />

        </com.luanxu.custom.percent.PercentLinearLayout>
    </ScrollView>

</LinearLayout>
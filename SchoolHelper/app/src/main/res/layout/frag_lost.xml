<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/color_white">
    <com.luanxu.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="2%w">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="15%w"
                app:layout_widthPercent="15%w"
                android:src="@mipmap/ic_head2" />
            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_marginLeftPercent="3%w"
                android:orientation="vertical">
                <com.luanxu.custom.percent.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_313131"
                        android:textSize="@dimen/yms_font_30_px"
                        android:gravity="center_vertical"
                        android:text="小明" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_hint"
                        android:textSize="@dimen/yms_font_24_px"
                        android:gravity="center"
                        android:text="3小时前"/>
                </com.luanxu.custom.percent.PercentLinearLayout>
                <TextView
                    android:id="@+id/tv_college"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/color_313131"
                    android:textSize="@dimen/yms_font_28_px"
                    android:gravity="center_vertical"
                    android:text="数学计算机科学学院" />
            </com.luanxu.custom.percent.PercentLinearLayout>
            <ImageView
                android:id="@+id/iv_medal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="10%w"
                app:layout_widthPercent="10%w"
                android:src="@mipmap/ic_gold_medal"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
        </com.luanxu.custom.percent.PercentLinearLayout>
        <com.luanxu.custom.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="2%w">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾取地点：花津校区2030104"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/yms_font_28_px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾取地点："
                android:textColor="@color/color_313131"
                android:textSize="@dimen/yms_font_28_px"/>
        </com.luanxu.custom.percent.PercentFrameLayout>
        <com.luanxu.custom.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="2%w">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾取时间：2017年3月30"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/yms_font_28_px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾取时间："
                android:textColor="@color/color_313131"
                android:textSize="@dimen/yms_font_28_px"/>
        </com.luanxu.custom.percent.PercentFrameLayout>
        <com.luanxu.custom.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="2%w">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾取物品：钥匙"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/yms_font_28_px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拾取物品："
                android:textColor="@color/color_313131"
                android:textSize="@dimen/yms_font_28_px"/>
        </com.luanxu.custom.percent.PercentFrameLayout>
        <com.luanxu.custom.MyGridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|fill_vertical"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="2%w"
            android:cacheColorHint="#00000000"
            android:duplicateParentState="false"
            android:focusable="false"
            android:gravity="center_vertical|fill_vertical"
            android:horizontalSpacing="@dimen/yms_dimens_10.0_px"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:visibility="gone"
            android:stretchMode="none"
            android:verticalSpacing="@dimen/yms_dimens_10.0_px" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_marginTopPercent="2%w"
            android:background="@color/color_divider" />

        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="10.5%w">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/iv_collect"
                    android:textSize="@dimen/yms_font_26_px"
                    android:textColor="@color/color_9c9c9c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/btn_review_patuebt_edu"
                    android:text="12"/>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/color_divider"
                android:layout_marginTop="@dimen/yms_dimens_20.0_px"
                android:layout_marginBottom="@dimen/yms_dimens_20.0_px"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/iv_flowers"
                    android:textSize="@dimen/yms_font_26_px"
                    android:textColor="@color/color_9c9c9c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/btn_dele"/>
            </LinearLayout>
        </com.luanxu.custom.percent.PercentLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_divider" />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="2.6%w"
            android:background="@color/color_background" />
    </com.luanxu.custom.percent.PercentLinearLayout>
</LinearLayout>
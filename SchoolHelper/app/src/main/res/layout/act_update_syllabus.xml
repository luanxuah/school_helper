<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical">

    <include layout="@layout/title_line" />

    <com.luanxu.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_marginTopPercent="5%w"
            android:background="@color/color_divider" />

        <!-- 添加人大代表start -->

        <com.luanxu.custom.percent.PercentLinearLayout
            android:id="@+id/pll_npc_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_shape_ffffff_0dp"
                android:onClick="clickYear"
                android:orientation="horizontal" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="学年" />

                <TextView
                    android:id="@+id/tv_year"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="请选择学年" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginRightPercent="3%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_shape_ffffff_0dp"
                android:onClick="clickTerm"
                android:orientation="horizontal" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="学期" />

                <TextView
                    android:id="@+id/tv_term"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="请选择学期" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right" />
            </com.luanxu.custom.percent.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginRightPercent="3%w"
                android:background="@color/color_divider" />

            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="13%w"
                android:background="@drawable/selector_shape_ffffff_0dp"
                android:onClick="clickWeek"
                android:orientation="horizontal" >

                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:text="当前周" />

                <TextView
                    android:id="@+id/tv_week"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/yms_font_32_px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:hint="请选择当前周" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_work_right" />
            </com.luanxu.custom.percent.PercentLinearLayout>
        </com.luanxu.custom.percent.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%w"
            android:background="@color/color_blue" >

            <Button
                android:id="@+id/delete"
                android:textColor="@color/color_white"
                android:textSize="@dimen/yms_font_32_px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_shape_blue_0dp"
                android:gravity="center"
                android:text="矫正课表" />

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/yms_dimens_30.0_px"
                android:layout_marginTop="@dimen/yms_dimens_30.0_px"
                android:background="@color/color_white" />

            <Button
                android:id="@+id/save"
                android:textColor="@color/color_white"
                android:textSize="@dimen/yms_font_32_px"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_shape_blue_0dp"
                android:gravity="center"
                android:text="修改课表" />
        </LinearLayout>
    </com.luanxu.custom.percent.PercentLinearLayout>

</LinearLayout>

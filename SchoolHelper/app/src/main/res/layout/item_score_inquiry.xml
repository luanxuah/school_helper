<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/yms_dimens_20.0_px"
    android:paddingLeft="@dimen/yms_dimens_20.0_px"
    android:paddingRight="@dimen/yms_dimens_20.0_px">

    <com.luanxu.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector_shape_white_9dp"
        >
        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            app:layout_widthPercent="30%w"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_marginTopPercent="2%w"
            app:layout_marginLeftPercent="4%w"
            app:layout_marginBottomPercent="2%w">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:textColor="@color/color_black"
                android:textSize="@dimen/yms_font_32_px"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="高数" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/yms_font_20_px"
                android:ellipsize="end"
                android:text="类型：必修课"
                app:layout_marginTopPercent="4%w"
                />
            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/yms_font_20_px"
                android:text="学分：2学分"
                app:layout_marginTopPercent="4%w"/>
        </com.luanxu.custom.percent.PercentLinearLayout>
        <com.luanxu.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            app:layout_widthPercent="68%w"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_text_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="期末成绩：65"
                    android:textSize="@dimen/yms_font_26_px" />
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="成绩：78"
                    android:textSize="@dimen/yms_font_26_px"/>
            </com.luanxu.custom.percent.PercentLinearLayout>
            <com.luanxu.custom.percent.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_credit_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学分绩点：65"
                    android:textSize="@dimen/yms_font_26_px"/>
                <TextView
                    android:id="@+id/tv_exam_again"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="补考：65"
                    android:textSize="@dimen/yms_font_26_px"/>
            </com.luanxu.custom.percent.PercentLinearLayout>
        </com.luanxu.custom.percent.PercentLinearLayout>

    </com.luanxu.custom.percent.PercentLinearLayout>

</LinearLayout>

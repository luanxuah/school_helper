<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按压时显示的颜色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <stroke android:width="@dimen/yms_dimens_2.0_px" android:color="@color/color_bg_green_normal_pressed" />
            <solid android:color="@color/color_bg_green_normal_pressed"/>
        </shape>
    </item>

    <!--选中时显示的颜色-->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <stroke android:width="@dimen/yms_dimens_2.0_px" android:color="@color/color_white" />
            <solid android:color="@color/color_white"/>
        </shape>
    </item>

    <!--默认显示的颜色-->
    <item>
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <stroke android:width="@dimen/yms_dimens_2.0_px" android:color="@color/color_bg_green_normal" />
            <solid android:color="@color/color_bg_green_normal"/>
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击显示的颜色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8px" />
            <stroke android:width="0dp" android:color="@color/color_6c6c6c" />
            <solid android:color="@color/color_80f15209"></solid>
        </shape>
    </item>
    <!-- 选中时显示的颜色 -->
    <item android:state_selected="true">
        <shape>
            <corners android:radius="8px" />
            <stroke android:width="0dp" android:color="@color/color_divider" />
            <solid android:color="@color/color_80f15209"></solid>
        </shape>
    </item>
    <!--默认显示的颜色-->
    <item>
        <shape>
            <corners android:radius="8px" />
            <stroke android:width="0dp" android:color="@color/color_6c6c6c" />
            <solid android:color="@color/color_f15209"></solid>
        </shape>
    </item>

</selector>